<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.HospitalDetailFragment">

    <RelativeLayout
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <ImageView
            android:id="@+id/image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="30dp"
            android:src="@drawable/ic_logo" />

        <TextView
            android:id="@+id/address_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주소"
            android:textSize="15dp"
            android:textColor="@color/colorBlack"
            android:layout_toRightOf="@+id/image"
            android:layout_marginTop="35dp" />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/address_txt"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="35dp" />

        <TextView
            android:id="@+id/intro_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="소개 글"
            android:textSize="15dp"
            android:textColor="@color/colorBlack"
            android:layout_toRightOf="@+id/image"
            android:layout_below="@+id/address_txt"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/intro_txt"
            android:layout_below="@+id/address"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/score_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="평점"
            android:textSize="15dp"
            android:textColor="@color/colorBlack"
            android:layout_toRightOf="@+id/image"
            android:layout_below="@+id/intro_txt"
            android:layout_marginTop="20dp" />
        
    </RelativeLayout>

</FrameLayout>